{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mofumofu Desktop",
  "version": "0.1.0",
  "identifier": "com.mofumofu.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "",
    "frontendDist": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "mofumofu",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "clipboard-access",
          "description": "Clipboard access for copying and monitoring",
          "windows": ["*"],
          "permissions": [
            "clipboard-manager:allow-read-text",
            "clipboard-manager:allow-write-text"
          ]
        },
        {
          "identifier": "notification-access",
          "description": "Notification access for clipboard alerts",
          "windows": ["*"],
          "permissions": [
            "notification:allow-is-permission-granted",
            "notification:allow-request-permission",
            "notification:allow-notify",
            "notification:default"
          ]
        },
        {
          "identifier": "devtools-access",
          "description": "Developer tools access",
          "windows": ["*"],
          "permissions": [
            "core:webview:allow-internal-toggle-devtools",
            "core:webview:default"
          ]
        },
        {
          "identifier": "shell-access",
          "description": "Shell command access for notifications",
          "windows": ["*"],
          "permissions": [
            "shell:allow-execute",
            "shell:allow-open",
            "shell:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13.0",
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  }
}
